// wit/timer.wit
package halt:timer;

interface types {
	record operands {
		left: u32,
		right: u32
	}

	variant operation {
		add(operands),
		sub(operands),
		mul(operands),
		div(operands)
	}
}
world timer {
	use types.{ operation };
	import log: func(msg: string);

	export calc: func(o: operation) -> u32;
	export start: func(s: u32);
}